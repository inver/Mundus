<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <default>
    <menu n="10">
      <label>Cirrus SR22</label>
      <enabled type="bool">true</enabled>
      <item>
        <label>Autostart</label>
        <binding>
          <command>property-toggle</command>
          <property>/controls/electric/battery-switch</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/electric/engine/generator</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/instrument-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/nav-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/strobe</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/anti-ice/engine/carb-heat</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/engines/engine/fuel-pump</property>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>/controls/engines/engine/magnetos</property>
          <value>3</value>
        </binding>
        <binding>
          <command>nasal</command>
          <script>controls.startEngine(0,0)</script>
        </binding>
        <binding>
          <command>nasal</command>
          <script>gui.popupTip("Press 's' to start")</script>
        </binding>
      </item>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>
      <item>
        <label>Show/hide Yokes</label>
        <binding>
          <command>property-toggle</command>
          <property>/sim/model/hide-yoke</property>
        </binding>
      </item>
      <!--
      <item>
        <label>Immatriculation</label>
        <binding>
          <command>nasal</command>
          <script>navion.immat_dialog.toggle()</script>
        </binding>
      </item>
      -->
    </menu>
  </default>
  
</PropertyList>
